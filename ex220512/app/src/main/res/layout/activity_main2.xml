<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_com1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E53935"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_com2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D81B60"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_com3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#5E35B1"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_com4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3949AB"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_com5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1E88E5"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_com6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ACC1"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="꽝 다음 기회에.."
            android:textAlignment="center"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_input1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_input2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="30"
            android:textSize="48sp"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_input3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_input4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_input5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_input6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30"
            android:textAlignment="center"
            android:textSize="48sp" />
    </LinearLayout>
</LinearLayout>